<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="some">
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/syn"/>
            <property name="hibernate.connection.username" value="syn"/>
            <property name="hibernate.connection.password" value="synpas"/>
        </properties>
    </persistence-unit>
</persistence>